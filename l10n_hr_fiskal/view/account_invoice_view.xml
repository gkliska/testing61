		<record model="ir.ui.view" id="account_invoice_l10_n_hr_fiskal">
			<field name="name">account.invoice.l10n.hr.fiskal</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<button name="invoice_print" position="after">
                    <button name="button_fiscalize" string="Fiskaliziraj" states="open"
                        type="object" groups="base.group_user" />
				</button>

				<field name="type" position="before">
				    <group colspan="4">
					<field name="zki" string="ZKI" readonly="True" states="open" />
					<field name="jir" string="JIR" readonly="True" states="open"/>
					</group>
				</field>
				<field name="journal_id" position="after">
				    <field name="pprostor_id"/>
				    <field name="nac_plac"/>
				</field>

			</field>
		</record>

